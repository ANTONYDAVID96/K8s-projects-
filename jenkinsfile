pipeline {
    agent any

    stages {
        stage('scm') {
            steps {
        git branch: 'main', url: 'https://github.com/ANTONYDAVID96/K8s-projects-.git'
            }
        }
        stage('build') {
            steps {
               bat "mvn clean"
               bat "mvn install"
}
}
stage('build to images') {
            steps {
               script{
                  sh 'docker build -t antonydavid96/tem:1 .'
               }
    }
}
stage('push to hub') {
            steps {
               script{
                  withCredentials([string(credentialsId: 'DavidDockerAntony', variable: 'docker_warfile')]) {
                     sh "docker login -u antonydavid96 -p ${docker_warfile}"
                  }
                 sh 'docker push antonydavid96/tem:1'
               }
            }
}
stage('Deploy') {
            steps {
               script{
                 sh 'docker run -itd --name tem -p 8081:8080 antonydavid96/tem:1'
    }
}
}
    }
}