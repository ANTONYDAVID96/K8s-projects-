pipeline {
    agent any

    stages {
        stage('scm') {
            steps {
        git branch: 'main', url: 'https://github.com/ANTONYDAVID96/K8s-projects-.git'
            }
        }
stage('build to images') {
            steps {
               script{
                  sh 'docker build -t antonydavid96/templet:1 .'
               }
    }
}
stage('push to hub') {
            steps {
               script{
                 withCredentials([string(credentialsId: 'kubctl_demo', variable: 'demo')]) {
                     sh "docker login -u antonydavid96 -p ${demo}"
                  }
                 sh 'docker push antonydavid96/templet:1'
               }
            }
}
stage('Deploy') {
            steps {
              sh 'kubectl apply -f deployment.yml'
    
}
}
    }
}
