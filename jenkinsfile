pipeline {
    agent any

    stages {
        stage('scm') {
            steps {
        git branch: 'war', url: 'https://github.com/ANTONYDAVID96/war-project.git'
            }
        }
        stage('build') {
            steps {
               bat "mvn clean"
               bat "mvn install"
}
}
stage('build to images') {
            steps {
               script{
                  bat 'docker build -t antonydavid96/mywar:2.0 .'
               }
    }
}
stage('push to hub') {
            steps {
               script{
                  withCredentials([string(credentialsId: 'DavidDockerAntony', variable: 'docker_warfile')]) {
                     sh "docker login -u antonydavid96 -p ${docker_warfile}"
                  }
                  bat 'docker push antonydavid96/mywar:2.0'
               }
            }
}
stage('Deploy') {
            steps {
               script{
                  bat 'docker run -itd --name tomcat -p 8081:8080 antonydavid96/mywar:2.0'
    }
}
}
    }
}